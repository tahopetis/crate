# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Application Configuration
NEXT_PUBLIC_APP_NAME="Crate - IT Asset Management"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="IT Asset Management Platform"

# Authentication
NEXT_PUBLIC_AUTH_TOKEN_EXPIRY=3600
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Development/Build Configuration
NODE_ENV=development
NEXT_PUBLIC_DEV_MODE=true

# Database Configuration (for reference)
# POSTGRES_URL=postgresql://user:password@localhost:5432/crate
# NEO4J_URL=bolt://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=password

# External Services
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here
# SMTP_HOST=your-smtp-host
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DATE_FORMAT=MM/dd/yyyy
NEXT_PUBLIC_TIME_FORMAT=HH:mm:ss

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# Caching
NEXT_PUBLIC_CACHE_MAX_AGE=3600
NEXT_PUBLIC_SWR_MAX_AGE=300